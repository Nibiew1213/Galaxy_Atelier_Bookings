<div class="px-4 py-1 my-5 text-center">
    <h1 class="display-5 fw-bold">Edit Booking</h1>
    <div class="col-lg-6 mx-auto">
        <p class="lead">Select field below to edit details</p>
    </div>
</div>

<!-- <div>
    <a><%= editBookings.name %></a>
</div> -->

<div class="row justify-content-center">

    <div class="col-8">
       
            <form action="/update-bookings/<%= editBookings._id %>?_method=PUT" method="POST">
    
                <div class="row g-3">
    
                    <div class="col-12">
                        <label for="name" class="form-label">Name</label>
                        <input value= <%= editBookings.name %> name="name" id="name" class="form-control" required>
                    </div>
                          
                    <div class="col-12">
                        <label for="phone" class="form-label">Phone number</label>
                        <input value= <%= editBookings.phone %> type="tel" name="phone" id="phone" pattern="[0-9]{8}" class="form-control" required>
                    </div>
    
                    <div class="col-12">
                        <label for="carModel" class="form-label">Car Model</label>
                        <input value= <%= editBookings.carModel %> type="text" name="carModel" id="carModel" class="form-control" required>
                    </div>
    
                    <div class="col-12">
                        <label for="carPlate" class="form-label">Car Plate Number</label>
                        <input value= <%= editBookings.carPlate %> type="text" name="carPlate" id="carPlate" class="form-control" required>
                    </div>
    
                    <div class="col-12">
                        <label for="bookingTime" class="form-label">Booking Time (date and time):</label>
                        <input value= <%= editBookings.bookingTime %> type="datetime-local" name="bookingTime" id="bookingTime" class="form-control" required>
                    </div>
            
                    <div class="col-12">
                        <button type="submit" class="btn btn-primary">Save Edited Booking</button>
                    </div>
                </div>
            </form>

    </div>
</div>